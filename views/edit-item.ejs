<!doctype html>
<html>
<head>
    <meta charset="utf8" />
    <title><%= title %></title>
</head>
<style type="text/css">
    body {
        margin: 0;
        padding: 0;
        display: flex;
        justify-content:center;
        text-align: center;
        flex-direction:column;
        background: #4d5bf9;
        color:#00072f;
    }

    p{
        width:40%;
        margin:10px auto;
    }
</style>
<body>
<form method="post" action="/edit/<%= post.id %>?_method=PUT">
    <label>Title:</label>
    <input name="title" type="text" value="<%= post.title %>" ><br />
    <label>Author:</label>
    <input name="author" type="text" value="<%= post.author %>" ><br />
    <label>Text:</label>
    <textarea name="text"><%= post.text %></textarea><br />
    <input type="submit" name="send" value="Send">
</form>
</body>
</html>