<!doctype html>
<html>
<head>
    <meta charset="utf8" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/style.css" type="text/css" />
</head>
<body>
    <a href="/contacts">Back</a>
    <div class="post-box">
        <h3>
            <span><%= post.title %></span>
            <span><%= post.createdAt %></span>
        </h3>
        <p><%= post.text%></p>
        <h4>Author: <%= post.author %></h4>
        <div class="post-trash">x</div>
        <a href="/edit/<%= post.id %>" class="post-edit">i</a>
    </div>
</body>
</html>